<Window x:Class="Lab_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <DatePicker SelectedDate="{Binding BirthDate, Mode=OneWayToSource}"></DatePicker>
            <TextBlock Text="{Binding Age, Mode=OneWay}" Height="40"></TextBlock>
            <TextBlock Text="{Binding WesternZodiac, Mode=OneWay}" Height="40"></TextBlock>
            <TextBlock Text="{Binding ChineseZodiac, Mode=OneWay}" Height="40"></TextBlock>
            <TextBlock Text="{Binding BirthdayMessage, Mode=OneWay}" Height="40"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
